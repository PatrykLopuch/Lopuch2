{% extends 'base.html.twig' %}

{% block title %}
    View item
{% endblock %}

{% block body %}
     <h1>{{ 'View item' | trans }}</h1>
    {% if item is defined and item|length %}
        <dl>
            <dt>{{ 'label.title' | trans}}</dt>
            <dd>{{ item.title }}</dd>
            <dt>{{ 'label.tags' | trans }}</dt>
            <dd>{{ item.tags|join(', ') }}</dd>
        </dl>
    {% else %}
        <p>empty list</p>
    {% endif %}
{% endblock %}